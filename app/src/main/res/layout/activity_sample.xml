<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_login_presenter_activity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="LoginPresenterActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_login_presenter_ex_activity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="LoginPresenterExActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_login_theme_activity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="LoginThemeActivity"
        android:textAllCaps="false" />

</LinearLayout>